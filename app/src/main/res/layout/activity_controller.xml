<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllerActivity">

    <Button
        android:id="@+id/Controller_btnThem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:onClick="Controller_btnThem_Click"
        android:text="Thêm Mới"
        app:layout_constraintBottom_toTopOf="@+id/Controller_btnWrite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Controller_btnDanhsach" />

    <Button
        android:id="@+id/Controller_btnWrite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:onClick="Controller_btnWrite_Click"
        android:text="ghi file"
        app:layout_constraintBottom_toTopOf="@+id/Controller_btnSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Controller_btnThem" />

    <Button
        android:id="@+id/Controller_btnDanhsach"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:onClick="Controller_btnDanhsach_Click"
        android:text="Danh sách"
        app:layout_constraintBottom_toTopOf="@+id/Controller_btnThem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Controller_btnSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:onClick="Controller_btnSearch_Click"
        android:text="Tìm Kiếm"
        app:layout_constraintBottom_toTopOf="@+id/Controller_btnRead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Controller_btnWrite" />

    <Button
        android:id="@+id/Controller_btnRead"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:onClick="Controller_btnRead_Click"
        android:text="Đọc file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Controller_btnSearch" />

</android.support.constraint.ConstraintLayout>